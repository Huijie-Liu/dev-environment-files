#!/bin/bash

# 从终端读取输入

echo "================================================"
echo "请输入要处理的文本（输入结束后按回车并Ctrl+D）："
echo "================================================"
input=$(cat)

# 使用sed替换((\\(|\\))|(\\[|\\]))匹配到的内容为$$
output=$(echo "$input" | sed -E 's/((\\\(|\\\))|(\\\[|\\\]))/\$\$/g')

echo $output
# 将结果复制到剪贴板
echo "$output" | pbcopy

# 打印确认消息
echo "==========================="
echo "替换后的内容已复制到剪贴板。"
echo "==========================="
